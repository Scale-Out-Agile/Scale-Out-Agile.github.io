---
layout: default.hbs
---
<div class="row">
  <div class="col-md-3">
    <div class="bs-sidebar hidden-print" role="complementary">
      <ul class="nav bs-sidenav">
        {{#is basename "about" }}
          {{> nav-about }}
        {{/is}}
        {{#is basename "markdown" }}
          {{> nav-markdown }}
        {{/is}}
      </ul>
    </div>
  </div>
  <div class="col-md-9" role="main">
    {{! wrapped with 'wordcount' for wordcount plugin }}
    <div class="wordcount">
      {{> body }}
    </div>
  </div>
</div>